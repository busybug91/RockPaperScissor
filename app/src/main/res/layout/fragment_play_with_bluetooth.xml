<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nitin.rockpaperscissor.PlayWithBluetooth$PlaceholderFragment">


    <TextView
        android:text="@string/draw_gesture_area"
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="#330099"
        android:layout_gravity="center_horizontal" />

    <android.gesture.GestureOverlayView
        android:id="@+id/gestures_draw"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight= "1.0"
        android:gestureColor="#990000"
        android:orientation="vertical"
        android:background="@android:color/darker_gray"
        android:fadeEnabled="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Score History"
        android:id="@+id/button_score"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
